  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "shell",
      "linux": {
        "command": "sudo go test -v ./test/..."
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Build",
      "type": "shell",
      "command": "cd ./cmd/cnet && go build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "Launch",
      "type": "shell",
      "command": "cd ./cmd/cnet && sudo ./cnet",
      "group": "none",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "dependsOn": [
        "Build"
      ]
    }
  ]
}
